#include <vcc2.h>

__specification int x = 0;
__specification int y = 0;

__specification void foo() 
  writes(&x)
{
  x = 1;
  assert(x == 1);
}

__specification void bar() 
  writes(&x, &y)
{
  y = 1;
  foo();
  assert(y == 1);
}

void baz()
  requires(program_entry_point())
  requires(x > 0)
{
  int q = x - 1;
}

`
Verification of foo succeeded.
Verification of bar succeeded.
Verification of baz succeeded.
`
