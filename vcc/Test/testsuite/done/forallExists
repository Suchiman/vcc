#include <vcc2.h>

typedef __int32 INT32;
typedef unsigned __int8 UINT8;
typedef unsigned __int16 UINT16;
typedef unsigned __int32 UINT32;
typedef unsigned __int64 UINT64, *PUINT64;
typedef void VOID, *PVOID;


static void shortsort(UINT8 arr[], UINT64 count)
  reads(_vcc_compat_region(arr, count))
  writes(_vcc_compat_region(arr, count))
  maintains(is_thread_local_array(arr, count))
  requires(count > 0)
  ensures(forall(UINT64 i; _vcc_match_ulong(i) && 0 <= i && i < count ==> exists(UINT64 j; _vcc_match_ulong(j) && thread_local(&arr[j]) && old(arr[i]) == arr[j])))
  {
  }

`
Verification of shortsort succeeded.
