#include <vcc.h>
#include <sal.h>

void ArrayWriteInLoopTestOk(int a[], size_t size)
  writes(array_range(a, size))
  ensures(forall(size_t k; k < 0 || k >= size || a[k] == 1))
{ 
  size_t i = 0;  
  while (i < size) 
    invariant(0 <= i && i <= size)
    invariant(forall(size_t t; t < 0 || t >= i || a[t]==1))
  {
    a[i++]=1;
  }
}

void ArrayAssignWithLoopTestOk(int a[], size_t size)
  writes(array_range(a, size))
{ 
  for(size_t i = 0; i < size; i++)
    invariant(0 <= i && i <= size)
  {
    a[i] = 1;
  }
}

void ArrayAssignWithLoopAlternativePreconditionTestOk(int a[], size_t size)
  requires(forall(size_t j; {a[j]} 0 <= j && j < size ==> typed(a+j)))
  writes(array_range(a, size))
{ 
  for(size_t i = 0; i < size; i++)
    invariant(0 <= i && i <= size)
  {
    a[i] = 1;
  }
}
