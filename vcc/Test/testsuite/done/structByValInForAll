#include <vcc2.h>
#include <sal.h>

typedef unsigned __int32 UINT32;
typedef unsigned __int64 UINT64;

typedef struct proc_t {
    unsigned __int64 dummy;
    UINT32 spr[17];    
} proc_t;

typedef struct guest_t{
	proc_t p;
	UINT32 mem[(100+1)*1024];
} guest_t;


spec(ispure bool proc_rel(proc_t p1, proc_t p2) 
  ensures(result == (forall(UINT64 i; i < 17 ==> (p1.spr[i] == p2.spr[i]))));)

spec(ispure bool procs_rel(proc_t pcb[8], proc_t proc, guest_t gp[8], UINT32 n) 
  reads(set_universe())
  ensures(result == (forall(UINT64 i; {gp[i].p} {pcb[i]} i < 8 ==> ((i == n) ==> proc_rel(gp[i].p, proc)))));)

void bar(proc_t pcb[8], proc_t proc, guest_t gp[8], UINT32 n)
  requires(n < 8)
  requires(procs_rel(pcb, proc, gp, n)) {
}

`
Verification of bar succeeded.
`
