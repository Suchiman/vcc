#include <vcc.h>

void AssignLocalTestOk(){ int x,y,z;
  x=1;y=2;z=3;
  assert(x+y==z);
}

void AssumeLocalTestOk(){ int x,y,z;
  assume(x==1);
  assume(y==2);
  assume(z==3);
  assert(x+y==z);
}

void AssertTestFails()
{
  assert(false);
}
