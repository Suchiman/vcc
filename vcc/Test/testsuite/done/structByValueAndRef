#include <vcc2.h>
#include <sal.h>

typedef long long __vcI8;
typedef unsigned long long __vcU8;


typedef unsigned __int32 UINT32;

typedef struct { 
  UINT32 a;
  UINT32 b;
} S, *PS;

void initS(PS s) 
  writes(extent(s))
  ensures(thread_local(s))
  maintains(mutable(s) && is_object_root(s))
{
  s->a = 0;
  s->b = 0;
}

void useS(S s) { }

void foo() {
  S s;
  initS(&s);
  useS(s);
}

`
Verification of initS succeeded.
Verification of useS succeeded.
Verification of foo succeeded.
`