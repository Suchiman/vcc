#include <vcc2.h>

typedef unsigned __int64 UINT64;
typedef unsigned __int8 PAGE[4096];

typedef union _PTE {
  UINT64 AsUINT64;
  struct {
    UINT64 Present:1;
    UINT64 ReadWrite:1;
    UINT64 Pfn:9;
    UINT64 Reserved:52;
  };
} PTE, *PPTE;

ispure __specification _Bool PteIsPresent(PPTE p)
  reads(p)
  ensures(result == (p->Present));

 void foo(PPTE p)
    reads(p)
    requires(PteIsPresent(p))
    {
    } 
`
Verification of foo succeeded.
Verification of PteIsPresent#reads succeeded.
`
