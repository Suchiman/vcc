#include "vcc.h"

void setk(int *p, size_t sz)
  requires(is_mutable_array(p, sz))
  writes(array_range(p, sz - 1)) // ERR
{
  size_t i;

  i = 0;
  while (i < sz) 
    invariant (i >= 0)
  {
    p[i] = unchecked((int)i);
    i = i + 1;
  }
}
