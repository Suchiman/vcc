#include "vcc.h"

struct A {
  unsigned size;
  int *arr;
  invariant(keeps((unsigned[size])(arr)))
  invariant(this->size > 0 && this->arr[0] > 0)
};

void foo(struct A *a)
  writes(a)
  requires(wrapped(a))
{
  unwrap(a);
  unwrap((int[a->size])a->arr);
  a->arr[0] = 5;
  wrap((int[a->size])a->arr);
  wrap(a);
}
`
Verification of A#adm succeeded.
Verification of foo succeeded.
`
