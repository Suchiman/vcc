#include <vcc.h>

int foo(int i spec(out int o)) 
  ensures(o == i)
  ensures(result == 6)
{
  spec(o = i;)
  return 6;
}		

void bar() {
  spec(int p;)
  int r;
  r = foo(5 spec(out p));
  assert(p == 5);
  assert(r == 6);
}

`
Verification of foo succeeded.
Verification of bar succeeded.
`
