#include "vcc.h"

void foo(unsigned *a, unsigned n)
	writes(array_range(a,n))
{
	unsigned i;
	spec(unsigned j;)

	for (i = 0; i < n; i++)
		invariant(unsigned j; j < n; a[i]==0) // syntactically wrong (quantifier missing)
		a[i] = 0;
}
`
testcase(10,15) : error VC0000: Invalid expression term 'unsigned'.
testcase(10,15) : error VC0000: ) expected.
testcase(10,41) : error VC0000: Invalid expression term ')'.
testcase(11,3) : error VC0000: ; expected.
testcase(10,27) : warning VC9001: The expression 'j < n' has no side effect; expected operation with side effect.
testcase(10,34) : warning VC9001: The expression 'a[i]==0' has no side effect; expected operation with side effect.
