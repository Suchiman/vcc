#include <vcc.h>

bool ispure zero1(int a)
returns (a == 0 ? (0 == 0) : false);
bool ispure zero2(int a)
returns (a == 0 ? (0 == 0) : (1 < 0));
bool ispure zero3(int a)
returns (a == 0 ? (0 != 1) : (0 == 0) && (0 == 1));

void foo() {
  assert(zero1(0));
  assert(zero2(0));
  assert(zero3(0));
}
`
Verification of foo succeeded.
`
