#include <vcc.h>

struct S {
  int a;
  spec(int b;)
};

void foo() {
  spec(int i;)
  spec(int ^p;)
  spec(p = &i;)
}

void bar(struct S *s) {
  spec(int ^p;)
  spec(p = &s->b;)
}

spec(void baz(struct S ^s) {
  spec(int ^p;)
  p = &s->a;
})
`
Verification of foo succeeded.
Verification of bar succeeded.
Verification of baz succeeded.
`
