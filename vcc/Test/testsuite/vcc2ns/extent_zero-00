
#include <vcc.h>

struct S { int a; };

struct T { 
  struct S s; 
  unsigned int b;
};

void foo(struct S *s) 
  requires(typed(s) && thread_local(s))
  requires(extent_zero(s))
{
  assert(s->a == 0);
}

void bar(struct T *t) 
  requires(typed(t) && thread_local(t))
  requires(extent_zero(t))
{
  assert(t->s.a == 0);
  assert(t->b == 0);
}
`
Verification of foo succeeded.
Verification of bar succeeded.
`
