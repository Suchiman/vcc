{
  _(assume \start_here())
  _(assert x > 0)
}

void ok1(int x)
{
  _(assert x > 0)
  _(assume \start_here())
}

void ok2(int x)
{
  _(assume \start_here())
  _(assume \false)
  _(assert x > 0)
}

void ok3(int *x)
{
  *x = 10;
  _(assume \start_here())
}


void ok4(int x)
{
  x = x + 1;
  _(assume \start_here())
}

