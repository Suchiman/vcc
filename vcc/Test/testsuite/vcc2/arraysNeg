#include "vcc2test.h"

void foo(int *p) 
  writes(p) {}

void setk2(int *p, size_t sz)
  requires(is_thread_local_array(p, sz))
  writes(array_range(p, sz))
{
  size_t i;

  i = 0;
  while (i < sz) 
    writes(array_range(p, sz))
    invariant (i >= 0)
  {
    p[i] = unchecked((int)i);
    foo(&p[i]);
    i = i + 1;
  }
}

void setk4(int *p, size_t sz)
  requires(is_thread_local_array(p, sz))
  writes(array_range(p, sz))
{
  size_t i;
  claim_t c;


  i = 0;
  while (i < sz) 
    writes(array_range(p, sz))
    invariant (i >= 0)
  {
    p[i] = unchecked((int)i);
    i = i + 1;
    if(0) unclaim(c);
  }
}
`
Verification of foo succeeded.
Verification of setk2 failed.
