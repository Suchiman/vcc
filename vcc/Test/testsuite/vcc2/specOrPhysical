#include "vcc2test.h"
void foo()
{
  spec(char *xyz[char*];)
  spec(int foo[int*];)
  char arr[10];
  int x = 20;
  char *p = (char *)malloc(10);
  assume(p != NULL);
  speconly(xyz = lambda(char *c; c != 0; c + 1);)
  assert(typed(&arr));
  assert(typed(&arr[1]));
  assert(typed_phys(&arr));
  assert(typed_phys(&arr[1]));
  assert(typed(&p));
  assert(typed(&p[1]));
  assert(typed_phys(&p));
  assert(typed_phys(&p[9]));
}
