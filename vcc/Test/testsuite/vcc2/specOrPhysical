`
#include <vcc.h>

struct S {
  int a;
};

struct T {
  struct S *p;
  spec(struct S ^q;)
  invariant(keeps(p,q))
};

void foo(struct T *t) 
  writes(t)
  maintains(wrapped(t))
{
  expose(t) {
    assert(typed(t->p));
    assert(typed_phys(t->p));
    assert(typed(t->q));
    assert(typed_spec(t->q));
  }
}
`
