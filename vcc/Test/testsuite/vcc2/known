#include <vcc.h>

int foo(int i, int j) 
  requires(i)
  requires(!j)
{
  int k = known(i,true) && known(j,false);
  return k;
}

int bar(int i, int j) 
  requires(!j)
{
  int k = known(i,true) && known(j,false);
  return k;
}

int baz(int i, int j) 
  requires(!i)
  requires(!j)
{
  int k = known(i,true) && known(j,false);
  return k;
}

int qux(int i, int j)
  requires(i && !j)
{
  int k = known(i, true) && !(known(j, false));
  assert(k);
}
