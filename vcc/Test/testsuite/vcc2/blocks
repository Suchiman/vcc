#include <vcc.h>

void foo() 
	{
  int i = 5;
  int j = 3;
  block
    requires(i <= 5 && j == 3)
    ensures(i == old(i) + 1 && j == 3)
  {
    i++;
    block 
      requires(j == 3)
      ensures(j == 4)
    {
      j++;
    }
    j--;
  }
  assert(i == 6 && j == 3);
}	

`
