#include <vcc.h>

int foo(int i)
  requires(i < 10)
  ensures(result == i + 4)
{
  i++;
  block
    requires(i < 11)
    ensures(i == old(i) + 3)
  {
    i++;
    block
      requires(i < 12)
      ensures(i == old(i) + 1)
    {
      i++;
    }
    block
      requires(i < 13)
      ensures(i == old(i) + 1)
    {
      i++;
    }
  }
  assert(i < 14);
  return i;
}
