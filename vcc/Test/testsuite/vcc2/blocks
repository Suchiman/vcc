#include <vcc.h>

void foo(int *i) 
  writes(i)
  ensures(*i == 10)
{
  int j = 5;
  *i = 9;
  block
    writes(i)
    requires(*i < 10 && j < 10)
    ensures(*i == old(*i) + 1 && j == old(j + 1))
  {
    (*i)++; 
    j++;
  }
  assert(j == 6);
}
