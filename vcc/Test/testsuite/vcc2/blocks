
#include <vcc.h>

void foo() 
	{
  int i = 5;
  int j = 3;
  block
    requires(i <= 5 && j == 3)
    ensures(i == old(i) + 1)
  {
    i++;
  }
  assert(i == 6 && j == 3);
}	

