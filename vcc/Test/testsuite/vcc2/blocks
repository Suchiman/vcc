#include <vcc.h>

typedef struct _A{
    int a;
} A, *PA;

void foo(PA p claimp(out c))
ensures(wrapped(c) && is_fresh(c))
writes(p)
;

void test(PA p, PA p1)
requires(p != p1)
 writes(p)
 writes(p1)
{
spec(claim_t c;)
spec(claim_t c1;)

block
 // writes(&c)
 requires(p != p1)
 ensures(wrapped(c))
 ensures(wrapped(c1))
 writes(p)
 writes(p1)
{
   foo(p spec(out c));
   assert(valid_claim(c));

   foo(p1 spec(out c1));
   assert(valid_claim(c));
   assert(wrapped(c));
   assert(wrapped(c1));
}
}
