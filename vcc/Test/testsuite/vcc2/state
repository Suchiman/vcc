`/newsyntax
#include <vcc.h>

void foo()
{
  int x, *p;
  _(ghost \state s1, s2;)
  _(ghost \state s3, ^s3p;)
  p = &x;
  _(ghost  s3p = &s3;)

  *p = 1;
  _(ghost s3 = \current_state();)
  _(ghost s1 = \current_state();)
  *p = 2;
  _(ghost s3 = \current_state();)
  _(ghost s2 = \current_state();)

  _(assert \in_state(s1, \in_state(s2, *p)) == 2)
  _(assert \in_state(s2, \in_state(s1, *p)) == 1)
  _(assert \in_state(s1, \in_state(\current_state(), *p)) == 2)


  _(assert \in_state(s1, \in_state(s3, *p)) == 2)
  _(assert \in_state(\in_state(s1, s3), *p) == 1)
  _(assert \in_state(s1, \in_state(\in_state(\current_state(),s3), *p)) == 2)
}
